{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "strict": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types" 
    ],
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src/**/*"],
"exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/**/__tests__/*",
    "tests",
    "__tests__",
"src/tests/**/*",
    "jest.config.js",
    "src/tests",
  ]
}
